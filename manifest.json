{

  "description": "Changes the maxheight of the YouTube theater player to hide video title and recommended videos.",
  "manifest_version": 2,
  "name": "Better YouTube Theater",
  "version": "1.0",
  "homepage_url": "https://github.com/haugenj/",
  "icons": {
    "48": "icons/icon48.png"
  },
  "permissions": [
    "*://*.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["theaterHeight.js"],
      "css": ["theater.css"]
    }
  ]

}
