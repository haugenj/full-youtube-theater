{

  "description": "Hide everything but the video when in YouTube's theater mode.",
  "manifest_version": 2,
  "name": "Full YouTube Theater",
  "version": "1.0.1",
  "homepage_url": "https://github.com/haugenj/full-youtube-theater",
  "icons": {
    "480": "icons/icon.png"
  },
  "permissions": [
    "*://*.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["theater.js"],
      "css": ["theater.css"]
    }
  ]

}
